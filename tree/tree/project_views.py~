import json

import django
from django.conf import settings
from django.http import HttpResponse
from django.shortcuts import render


def load(request, addr):
    with open('json1.json', 'r') as json1_file:
        json1_data = json.load(json1_file)
        node = json1_data
        flag = 0
        lis_element = 0
        lis = request.path.strip('/').split("/")
        for tag in lis:
            if flag == 0:
                flag = 1
                if node['slug'] == lis[-1]:
                    break
            else:
                    if node['slug'] == lis[lis_element] and node['kind'] == 'Topic':
                        b = lis_element + 1
                        for child in node['children']:
                            if child['slug'] == lis[b]:
                                node = child
                                lis_element = lis_element + 1
                                break
                            else:
                                continue
        if node['slug'] == lis[-1]:
            
            
            
            if node['kind'] == 'Topic':
                return render(request, 'Parent_node.html', {'title': node['title'], 'node': node })
            else:
                return render(request, 'Leaf_node.html', {'title': node['title'], 'node': node})
        else:
            return HttpResponse("Invalid Url")
